! Configuration File for keepalived

global_defs {
   notification_email {
    zhangbai@cmss.chinamobile.com
   }
   smtp_server 127.0.0.1 
   smtp_connect_timeout 30
   router_id NodeA
}

vrrp_script chk_haproxy {
    script "haproxy_check.sh"
    interval 1
    weight -2
}

vrrp_instance VI_1 {
    state BACKUP 
    interface <HA_VIP1_INTERFACE> 
    virtual_router_id <VIRTUAL_ROUTER_ID_1>
    priority 99
    advert_int 1
    smtp alert
    track_interface {
       <HA_VIP1_INTERFACE>	
    }
    track_script {
        chk_haproxy
    }
    authentication {
        auth_type PASS
        auth_pass <AUTH_PASS>
    }
    virtual_ipaddress {
        <HA_VIP1>/24 dev <HA_VIP1_INTERFACE> 
    }
    notify_fault "systemctl stop keepalived"
}

vrrp_instance VI_2 { 
    state MASTER 
    interface <HA_VIP2_INTERFACE> 
    virtual_router_id <VIRTUAL_ROUTER_ID_2> 
    priority 100
    advert_int 1
    track_interface {
        <HA_VIP2_INTERFACE> 
    }
    track_script {
        chk_haproxy
    }
    authentication {
        auth_type PASS
        auth_pass <AUTH_PASS>
    }
    virtual_ipaddress {
        <HA_VIP2>/24 dev <HA_VIP2_INTERFACE> 
    }
    notify_fault "systemctl stop keepalived"
}

