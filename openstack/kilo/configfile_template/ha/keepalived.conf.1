! Configuration File for keepalived

global_defs {
   notification_email {
     zhangbai@cmss.chinamobile.com
   }
   smtp_server 127.0.0.1
   smtp_connect_timeout 30
   router_id NodeA 
}

vrrp_script chk_haproxy {
    script "haproxy_check.sh"
    interval 1
    weight -2
}

vrrp_instance VI_1 {
    state MASTER 
    interface eth0 
    virtual_router_id 11
    priority 100
    advert_int 1
    smtp alert
    track_interface {
	eth0 
    }
    track_script {
        chk_haproxy
    }
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        10.20.0.66/24 dev eth0 
    }
    notify_fault "systemctl stop keepalived" 
}

vrrp_instance VI_2 { 
    state BACKUP 
    interface eth0
    virtual_router_id 202 
    priority 99  
    advert_int 1
    track_interface {
        eth0 
    }
    track_script {
        chk_haproxy
    }
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        10.20.0.99/24 dev eth0 
    }
    notify_fault "systemctl stop keepalived"
}

